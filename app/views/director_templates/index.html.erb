<h1>
  List of all directors
</h1>

<form action = "/insert_director_record" method = "post">
  <label for ="title_field">Title</label>
  <input id="title_field" type="text" name="the_title">

  <label for ="year_field">Year</label>
  <input id="year_field" type="text" name="the_year">

  <label for ="duration_field">Duration</label>
  <input id="duration_field" type="text" name="the_duration">


  <label for ="description">Description</label>
  <input id="description" type="text" name="the_description">

  <label for ="image_field">Image</label>
  <input id="image_field" type="text" name="the_image">

  <label for ="director_id_field">Director ID</label>
  <input id="director_id_field" type="text" name="the_director_id">

  <button>
    Create director
  </button>
</form>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_directors.each do |director| %>
  <tr>
    <td>
      <%= director.id %>
    </td>

    <td>
      <img src="<%= director.image %>" style="width:250px;">
    </td>

    <td>
      <%= director.name %>
    </td>

    <td>
      <%= director.dob %>
    </td>

    <td>
      <a href="/directors/<%= director.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
