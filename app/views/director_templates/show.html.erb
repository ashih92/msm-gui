<h1>
  Director #<%= @the_director.id %> details
</h1>

<a href="/directors">
  Go back
</a>

<hr>

<form action = "/modify_director_record/<%= @the_director.id %>" method = "post">
  <label for ="title_field">Title</label>
  <input id="title_field" type="text" name="the_title" value="<%= @the_director.title %>">

  <label for ="year_field">Year</label>
  <input id="year_field" type="text" name="the_year" value="<%= @the_director.year %>">

  <label for ="duration_field">Duration</label>
  <input id="duration_field" type="text" name="the_duration" value="<%= @the_director.duration %>">


  <label for ="description">Description</label>
  <input id="description" type="text" name="the_description" value="<%= @the_director.description %>">

  <label for ="image_field">Image</label>
  <input id="image_field" type="text" name="the_image" value="<%= @the_director.image %>">

  <label for ="director_id_field">Director ID</label>
  <input id="director_id_field" type="text" name="the_director_id" value="<%= @the_director.director_id %>">

  <button>
    Update director
  </button>
</form>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @the_director.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @the_director.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @the_director.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @the_director.image %>" style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= @the_director.created_at %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= @the_director.updated_at %>
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
    </th>
  </tr>

  <% the_id = @the_director.id %>

  <% matching_movies = Movie.where({ :director_id => the_id }) %>
  
  <% films = matching_movies.order({ :year => :asc }) %>

  <% films.each do |a_movie| %>
  <tr>
    <td>
      <%= a_movie.id %>
    </td>

    <td>
      <img src="<%= a_movie.image %>" style="width:250px;">
    </td>

    <td>
      <%= a_movie.title %>
    </td>

    <td>
      <%= a_movie.year %>
    </td>

    <td>
      <%= @the_director.name %>
    </td>

    <td>
      <a href="/movies/<%= a_movie.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
